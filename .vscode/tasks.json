{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "npm",
            "script": "build",
            "path": "ngapp",
            "group": "build",
            "problemMatcher": [],
            "label": "npm: build - ngapp",
            "detail": "ng build"
        },
        {
            "type": "npm",
            "script": "start",
            "path": "ngapp",
            "problemMatcher": [],
            "label": "npm: start - ngapp",
            "detail": "ng serve"
        },
        {
            "label": "Build Angular (devbuild config)",
            "type": "shell",
            "command": "ng",
            "args": [
                "build",
                "--configuration",
                "devbuild"
            ],
            "options": {
                "cwd": "${workspaceFolder}/ngapp"
            },
            "problemMatcher": []
        },
        {
            "label": "Serve Angular on Network",
            "type": "shell",
            "command": "ng",
            "args": [
                "serve",
                "--configuration=devbuild",
                "--host",
                "0.0.0.0",
            ],
            "options": {
                "cwd": "${workspaceFolder}/ngapp"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint entire project",
            "type": "shell",
            //"command": "${workspaceFolder}/pyvenv/Scripts/pylint.exe",
            "command": "${workspaceFolder}/pyvenv/Scripts/python.exe",
            "args": [
                "-u",
                "${workspaceFolder}/pylint_wrapper.py",
                "--ignore=pyvenv,ngapp",
                //"--output-format=json",
                //"--msg-template={path}:{line}:{column}: {category}: {msg} ({msg_id})",
                "."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "owner": "python",                
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {                    
                    "regexp": "^(.*?):(\\d+)-(\\d*):(\\d+)-(\\d*): (error|warning|info|hint): (.*) \\((Pylint\\(([A-Z]\\d{4}:(.*))\\))\\)$",
                    "file": 1,
                    "line": 2,
                    "endLine": 3,
                    "column": 4,
                    "endColumn": 5,
                    "severity": 6,
                    "message": 7,
                    "code": 8                   
                }
            }
        },
    ]
}